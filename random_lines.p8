pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

-- global variables
counter = 0

function _init()
    -- setup game / declare global variables
    cls(0)
end

function _update()
    if counter < 100 then
        counter += 1
    else
        counter = 0
        cls(0)
    end
end

function _draw()
    x0 = flr(rnd(128))
    x1 = flr(rnd(128))
    y0 = flr(rnd(128))
    y1 = flr(rnd(128))
    c = flr(rnd(16))
    line(x0, x1, y0, y1, c)
end

