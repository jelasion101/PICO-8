pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

-- global variables
px = 34
py = 64
hspeed = 1
vspeed = 1


function _init()
    -- setup game / declare global variables
    cls(0)
end

function _update()
    -- update game
    px += hspeed
    py += vspeed

    if px == 0 or px == 119 then
        hspeed = hspeed * -1
    end
    if py == 0 or py == 119 then
        vspeed = vspeed * -1
    end
end

function _draw()
    -- draw game
    cls(12)
    spr(1, px, py)
end

