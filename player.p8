version 29
__lua__

-- global variables

function _init()
    -- setup game / declare global variables
	cls(0)
    player = {x = 63, y = 63, sprNum = 1}

end

function _update60()
    -- update game
	if btnp(0) and player.x > 0 then
        player.x -= 1
    end
    if btnp(1) and player.x < 120 then
        player.x += 1
    end
    if btnp(2) and player.y > 0 then
        player.y -= 1
    end
    if btnp(3) and player.y < 120 then
        player.y += 1
    end		
end

function _draw()
    -- draw game
    cls(0)
    spr(player.sprNum, player.x, player.y)
end

