pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

-- global variables
x = 0
y = 0
direction = 1

function _init()
    -- setup game / declare global variables
    cls()
end

function _update()
    x += direction
    y += direction
    if x < 0 or x > 127 then
        direction = direction * -1
    end
end

function _draw()
    cls(0)
    line(x, 0, x, 127, 7)
    line(0, y, 127, y, 7)
end

