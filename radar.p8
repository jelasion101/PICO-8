pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

-- global variables
x = 0
y = 0
angle = 0

function _init()
    -- setup game / declare global variables
	cls(0)
end

function _update60()
    x = cos(angle/360)
    y = sin(angle/360)
    x *= 60
    y *= 60
    if angle != 360 then
        angle += 1
    else
        angle = 0
    end
end

function _draw()
    cls(0)
    circ(63, 63, 60)
    line(63, 63, 63 + x, 63 - y)
end

