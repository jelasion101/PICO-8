pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

-- global variables
x0 = 0
y0 = 0
x1 = 127
y1 = 127
c = 0

function _init()
    -- setup game / declare global variables
    cls(0)
end

function _update()
    -- update game
    x0 += 1
    y0 += 1
    x1 -= 1
    y1 -= 1
    
    if x0 >= x1 then
        x0 = 0
        y0 = 0
        x1 = 127
        y1 = 127
    end

    if c < 16 then
        c += 1
    else
        c = 0
    end
end

function _draw()
    -- draw game
    rectfill(x0, y0, x1, y1, c)

end

