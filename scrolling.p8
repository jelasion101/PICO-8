pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

-- global variables
#include alarms.lua
letters = {"S", "A", "M", "E", "E", "R", " ", "H", "U", "S", "S", "A", "I", "N", " "}

function _init()
    -- setup game / declare global variables
	cls(0)
    alarm0 = makeAlarm(10, shift)
end

function _update()
    -- update game
	updateAlarms()		
end

function _draw()
    -- draw game
    cls(0)
    x = 0
    for i, v in pairs(letters) do
        print(v, x, 0)
        x = x + 6
    end
end

function shift()
    placeholder = letters[1]
    del(letters, placeholder)
    add(letters, placeholder)
    startAlarm(10, alarm0)
end

