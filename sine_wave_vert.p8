__lua__

-- global variables
angle = 0
s = 0

function _init()
    -- setup game / declare global variables
	cls(0)
end

function _update60()
    -- update game
    s = ((sin(angle/360)) * 16) + 16
    if angle != 360 then
        angle += 16
    else
        angle = 0
    end
    
end

function _draw()
    -- draw game
    line = ""
    for i = 0, s do
        line = line .. "X"
    end
    print(line)
end

